@model List<FurnitureStore.Models.StockModel>

<style>
    @@font-face {
        font-family: 'Supermarket';
        src: url('/fonts/supermarket.ttf');
    }

    h1,
    p {
        font-family: 'Supermarket';
        font-size: 1vw;
        color: #525252;
        margin-left: 15px;
        margin-right: 12px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        /* number of lines to show */
        -webkit-box-orient: vertical
    }

    p {
        font-size: 1.7vw;
        color: #0B6E4F;
    }

    /* Float four columns side by side */
    .column {
        float: left;
        width: 25%;
        padding: 0 10px;
    }

    /* Remove extra left and right margins, due to padding */
    .row {
        margin: 20px -5px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    /* Responsive columns */
    .column {
        display: block;
        margin-bottom: 20px;
    }

    /* Style the counter cards */
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        text-align: left;
        background-color: #ffffff;
    }

    .card:hover {
        margin-top: -2px;
    }

    .base {
        padding-left: 30vw;
        padding-right: 30vw;
        padding-top: 50px;
        background-color: #F8F8F8;
        height: 100vh;
    }

    .prod {
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        width: 100%;
    }
</style>

<div class="base">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="column">
                <a asp-action="Product" asp-controller="Stock" asp-route-id="@item.Id">
                    <div class="card">
                        <img alt="" src="/images/@item.Image" class="prod" />
                        <h1>@item.Name</h1>
                        <p>à¸¿@item.Price</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
