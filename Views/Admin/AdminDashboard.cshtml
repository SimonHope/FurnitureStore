@{
    ViewData["Title"] = "Admin Dashboard";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<input type="checkbox" id="nav-toggle">
<div class="sidebar">
    <div class="sidebar-brand">
        <h3>
            <span class="las la-user"></span>
            <span>Admin Dashboard</span>
        </h3>
    </div>

    <div class="sidebar-menu">
        <ul>
            <li>
                <a asp-controller="Admin" asp-action="AdminDashboard" class="active">
                    <span class="lab la-elementor"></span>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="AdminProduct">
                    <span class="las la-shopping-cart"></span>
                    <span>จัดการสินค้า</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="AdminMember">
                    <span class="las la-user-friends"></span>
                    <span>จัดการสมาชิก</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="AdminOrder">
                    <span class="las la-clipboard-list"></span>
                    <span>Order</span>
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="main-content">

    <header>

        <h2>
            <label for="nav-toggle">
                <span class="las la-bars"></span>
            </label>
            Dashboard
        </h2>

        <div class="search-wrapper">
            <span class="las la-search"></span>
            <input type="search" placeholder="Search here" />
        </div>

        <div class="user-wrapper">
            <img src="https://images.unsplash.com/photo-1543466835-00a7907e9de1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80"
                width="40px" height="40px" alt="image">
            <div>
                <h4>Simon Hope</h4>
                <small>Admin</small>
            </div>
        </div>

    </header>
    <main>

        <div class="cards">
            <div class="card-single">
                <div>
                    <h1>54</h1>
                    <span>Members</span>
                </div>
                <div>
                    <span class="las la-users"></span>
                </div>
            </div>

            <div class="card-single">
                <div>
                    <h1>100</h1>
                    <span>Furniture</span>
                </div>
                <div>
                    <span class="las la-couch"></span>
                </div>
            </div>
        </div>

        <div class="recent-grid">
            <div class="furnitures">
                <div class="card">
                    <div class="card-header">
                        <h3>Recent Furnitures</h3>
                        <a asp-controller="Admin" asp-action="AdminProduct" class="a-create">
                            See all <span class="las la-arrow-right"></span>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td width="10%">ลำดับ</td>
                                        <td>ชื่อสินค้า</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>เก้าอี้</td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>เตียง</td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>ประตู</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="furnitures">
                <div class="card">
                    <div class="card-header">
                        <h3>Recent Members</h3>
                        <a asp-controller="Admin" asp-action="AdminMember" class="a-create">
                            See all <span class="las la-arrow-right"></span>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td width="10%">ลำดับ</td>
                                        <td>ชื่อผู้ดูแล</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>ฟลุค</td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>กิว</td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>เจม</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>