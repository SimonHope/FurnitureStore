@model List<FurnitureStore.Models.AdminMemberModel>
@{
    ViewData["Title"] = "Manage Members";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<input type="checkbox" id="nav-toggle">
<div class="sidebar">
    <div class="sidebar-brand">
        <h3>
            <span class="las la-user"></span>
            <span>Admin Dashboard</span>
        </h3>
    </div>

    <div class="sidebar-menu">
        <ul>
            <li>
                <a asp-controller="Admin" asp-action="AdminDashboard">
                    <span class="lab la-elementor"></span>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="AdminProduct">
                    <span class="las la-shopping-cart"></span>
                    <span>จัดการสินค้า</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="AdminMember" class="active">
                    <span class="las la-user-friends"></span>
                    <span>จัดการสมาชิก</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="AdminOrder">
                    <span class="las la-clipboard-list"></span>
                    <span>Order</span>
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="main-content">

    <header>

        <h2>
            <label for="nav-toggle">
                <span class="las la-bars"></span>
            </label>
            Member
        </h2>

        <div class="search-wrapper">
            <span class="las la-search"></span>
            <input type="search" placeholder="Search here" />
        </div>

        <div class="user-wrapper">
            <img src="https://images.unsplash.com/photo-1543466835-00a7907e9de1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80"
                width="40px" height="40px" alt="image">
            <div>
                <h4>Simon Hope</h4>
                <small>Admin</small>
            </div>
        </div>

    </header>
    <main>

        <div class="recent-grid">
            <div class="Account">
                <div class="card">
                    <div class="card-header">
                        <h3>Accounts</h3>
                        <button type="button">
                            เพิ่มสินค้า
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td>Username</td>
                                        <td>Name</td>
                                        <td>Surname</td>
                                        <td>Picture</td>
                                        <td>Manage</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Username</td>
                                            <td>@item.Name</td>
                                            <td>@item.Surname</td>
                                            <td style="text-align: center;">
                                                <div class="user-wrapper">
                                                    <center><img src="@item.Picture" alt="image"
                                                        style="height: 40px; width:40px "></center>
                                                </div>
                                            </td>
                                            <td><button style="width: 60px; height: 30px">Edit</button> <button
                                                style="width: 60px; height: 30px">Delete</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <button class="open-button" onclick="openForm()">+</button>
            <div class="form-popup" id="myForm">
                <form action="/action_page.php" class="form-container">
                    <table>
                        <h1>Create Account</h1>


                        <label for="email"><b>Username</b></label>
                        <input type="text" placeholder="Enter Email" name="email" required>

                        <label for="psw"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="psw" required>

                        <label for="psw"><b>Name</b></label>
                        <input type="text" placeholder="Enter your name" name="Fname" required>

                        <label for="psw"><b>Surname</b></label>
                        <input type="text" placeholder="Enter your surname" name="Fsurname" required>

                        <label for="psw"><b>Picture</b></label>
                        <input type="password" placeholder="Enter Password" name="Fimg" required>
                        <tr>
                            <button type="submit" class="btn">Add</button>
                            <button type="button" class="btn cancel" onclick="closeForm()">Cancel</button>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </main>
</div>